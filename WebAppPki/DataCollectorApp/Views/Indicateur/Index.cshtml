@{
    ViewBag.Title = "Historique - Indicateurs";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
 <!--Load the AJAX API-->
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">

      // Load the Visualization API and the corechart package.
      google.charts.load('current', {'packages':['corechart']});

      // Set a callback to run when the Google Visualization API is loaded.
      google.charts.setOnLoadCallback(drawKpiOneChart);
      google.charts.setOnLoadCallback(drawKpiTwoChart);
      google.charts.setOnLoadCallback(drawKpiThreeChart);
      google.charts.setOnLoadCallback(drawKpiFourChart);

      // Callback that creates and populates a data table,
      // instantiates the pie chart, passes in the data and
      // draws it.
      function drawKpiOneChart()
      {

        // Create the data table.
        var data = new google.visualization.DataTable();
        data.addColumn('string', 'Coopératives');
        data.addColumn('number', 'nombre');
        data.addRows([
          ['CAASO', 300],
          ['COOP-CA', 100],
          ['CASCO-COOP', 150],
          ['COOPAMA', 100],
          ['ECASO', 200]
        ]);

        // Set chart options
        var options = {'title':'Nombre d\'enfants scolarisés',
                       'width':300,
                       'height':200};

        // Instantiate and draw our chart, passing in some options.
        var chart = new google.visualization.PieChart(document.getElementById('indicateur_un'));
        chart.draw(data, options);
      }



      function drawKpiTwoChart() {

          // Create the data table.
          var data = new google.visualization.DataTable();
          data.addColumn('string', 'Coopératives');
          data.addColumn('number', 'nombre');
          data.addRows([
            ['CAASO', 150],
            ['COOP-CA', 200],
            ['CASCO-COOP', 150],
            ['COOPAMA', 60],
            ['ECASO', 200]
          ]);

          // Set chart options
          var options = {
              'title': 'Nombre de planteurs certifiés',
              'width': 300,
              'height': 200
          };

          // Instantiate and draw our chart, passing in some options.
          var chart = new google.visualization.PieChart(document.getElementById('indicateur_deux'));         
          chart.draw(data, options);
      }


      function drawKpiThreeChart() {

          // Create the data table.
          var data = new google.visualization.DataTable();
          data.addColumn('string', 'Coopératives');
          data.addColumn('number', 'nombre');
          data.addRows([
            ['CAASO', 150],
            ['COOP-CA', 200],
            ['CASCO-COOP', 150],
            ['COOPAMA', 60],
            ['ECASO', 200]
          ]);

          // Set chart options
          var options = {
              'title': 'Nombre de planteurs certifiés',
              'width': 300,
              'height': 200
          };

          // Instantiate and draw our chart, passing in some options.
          var chart = new google.visualization.PieChart(document.getElementById('indicateur_trois'));
          chart.draw(data, options);
      }



      function drawKpiFourChart() {

          // Create the data table.
          var data = new google.visualization.DataTable();
          var data = google.visualization.arrayToDataTable([
                ['Coopératives','nombre'],
                ['CAASO', 150],
                ['COOP-CA', 200],
                ['CASCO-COOP', 150],
                ['COOPAMA', 60],
                ['ECASO', 200]
          ]);

          /*data.addColumn('string', 'Coopératives');
          data.addColumn('number', 'nombre');
          data.addRows([
            ['CAASO', 150],
            ['COOP-CA', 200],
            ['CASCO-COOP', 150],
            ['COOPAMA', 60],
            ['ECASO', 200]
          ]);*/

          // Set chart options
          var options = {
              'title': 'Nombre de planteurs certifiés',
              legend: { position: 'none' }
          };

          // Instantiate and draw our chart, passing in some options.
          var chart = new google.visualization.ColumnChart(document.getElementById('indicateur_quatre'));
          chart.draw(data, options);
      }
</script>



